{% extends 'baseAdmin.html.twig' %}

{% block title %}Taxi index{% endblock %}

{% block body %}
    <h1>Taxi index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Matricule</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for taxi in taxis %}
            <tr>
                <td>{{ taxi.id }}</td>
                <td>{{ taxi.matricule }}</td>
                <td>{{ taxi.prix }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('taxi_show', {'id': taxi.id}) }}">show</a>
                    <a class="btn btn-success" href="{{ path('taxi_edit', {'id': taxi.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('taxi_new') }}">Create new</a>
{% endblock %}
