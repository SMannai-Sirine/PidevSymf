{% extends 'base.html.twig' %}

{% block title %}LocVoiture index{% endblock %}

{% block body %}

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <div class="container">
        <div class="row">


            {% for taxi in taxi_aeros %}


                <div class="col-sm-12">
                    <div class="product-details">
                        <div class="product-details" id="containers">
                            <h1> {{ taxi.idPays.nom }}</h1>
                            <h3>{{ taxi.idTaxi.matricule }}</h3>
                            <p class="information">Heure Reservation: {{ taxi.heure}} <br> </p>
                            <a class="btn btn-success" href="{{ path('taxi_aero_edit_user',{'id':taxi.id}) }}">Edit</a>
                            <a class="btn btn-danger" href="{{ path('taxi_aero_delete_user',{'id':taxi.id}) }}">Delete</a>
                        </div>


                    </div>
                </div>
            {% else %}

                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
        </div>

    </div>


{% endblock %}
{% block list %}

    <li class=""><a href="{{ path('taxi_aero_index_user') }}">Mes Reservation Taxi</a></li>
    <li class=""><a href="{{ path('loc_index_user') }}">Mes Reservation Voiture</a></li>
    <li class=""><a href="{{ path('taxi_aero_new') }}">Reserver Taxi</a></li>
    <li class=""><a href="{{ path('loc_voiture_new') }}">Reserver Voiture</a></li>
{% endblock %}