

{% block title %}Users{% endblock %}

{% block body %}
    <h1>Users</h1>
     <div class="content-page">
        <div class="container-fluid">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="form-group col-md-6">
       <a class="btn btn-success" href="{{ path('app_users_index') }}">back to list</a>
    </div>
    <div class="form-group col-md-6">
        <a class="btn btn-success" href="{{ path('app_users_edit', {'id': user.id}) }}">edit</a>
    </div>
     <div class="form-group col-md-6">
    {{ include('users/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
